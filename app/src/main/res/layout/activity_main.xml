<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:src="@drawable/alltodo"
        android:layout_width="150dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/btnGetAllTodo"
        app:layout_constraintRight_toRightOf="@id/btnGetAllTodo"
        app:layout_constraintLeft_toLeftOf="@id/btnGetAllTodo"
        android:layout_height="120dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGetAllTodo"
        android:text="GET ALL TODOS"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="#5C9F5F"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintHorizontal_bias="0.18"
        app:cornerRadius="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        app:layout_constraintBottom_toTopOf="@id/btnGetASingleTodo"
        android:src="@drawable/todo"
        app:layout_constraintRight_toRightOf="@id/btnGetASingleTodo"
        app:layout_constraintLeft_toLeftOf="@id/btnGetASingleTodo"
        android:layout_width="150dp"
        android:scaleType="centerCrop"
        android:layout_height="120dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGetASingleTodo"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="GET A SINGLE TODO"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="#5C9F5F"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.8"
        android:layout_width="wrap_content"
        app:cornerRadius="5dp"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>